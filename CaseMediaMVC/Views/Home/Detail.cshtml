<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/angular/angular.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/newsDetail.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.3.js"></script>
<body ng-app="app">
    <div ng-controller="Controller" ng-init="init('@ViewBag.Guid')">
        <div class="container">
            <div class="jumbotron">
                <h1>Case Media!</h1>
            </div>
            <div class="container">
                <div class="card text">
                    <div class="card-header">
                        <h5 class="card-title">{{ datas.title }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="container" ng-repeat="cont in datas.story.contents">
                            <p ng-if="cont._t == 'MongoDbTextContent'" class="card-text">{{ cont.text }}</p>
                            <img ng-if="cont._t == 'MongoDbImageContent'" class="card-img-bottom" ng-src="{{ cont.imageUrl }}"/>
                        </div>
                        
                        <a href="~/Home" class="btn btn-primary">Anasayfa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>