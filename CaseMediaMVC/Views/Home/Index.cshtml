<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/angular/angular.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/newsIndex.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.3.js"></script>
<script>document.write('<base href="' + document.location + '" />');</script>
<body ng-app="app">
    <div ng-controller="Controller">
        <div class="container">
            <div class="jumbotron">
                <h1>Case Media!</h1>
            </div>

            <div class="container">

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6" ng-repeat="data in filteredDatas">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" ng-src="{{data.mainArtUrl}}" alt="img">
                            <div class="card-body">
                                <h5 class="card-title">{{ data.title }}</h5>
                                <p class="card-text">{{ data.spot }}</p>
                                <a href="{{data.mainCategory.slug}}/{{data.title | slugify}}/{{data.id}}" class="btn btn-primary">Devamı...</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row" data-ng-show="datas.length == 0">
                        <div class="col-span-12">
                            No results found
                        </div>
                    </div>
                    <div class="row" data-ng-show="datas.length > 0">
                        <div class="col-span-12">
                            <uib-pagination ng-model="currentPage" total-items="datas.length" max-size="maxSize" items-per-page="numPerPage" boundary-links="true"></uib-pagination>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>